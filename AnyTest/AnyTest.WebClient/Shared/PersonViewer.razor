<div class="container">
    <div class="row">
        <label class="col-lg-2 text-left text-lg-right font-weight-bold">@Localizer[nameof(Resources.FirstName)]:</label>
        <div class="col-lg-10">
            <LoadingPropertyPresenter Content="@State?.Person?.FamilyName"></LoadingPropertyPresenter>
        </div>
    </div>
    <div class="row">
        <label class="col-lg-2 text-left text-lg-right font-weight-bold">@Localizer[nameof(Resources.FamilyName)]:</label>
        <div class="col-lg-10">
            <LoadingPropertyPresenter Content="@State?.Person?.FirstName"></LoadingPropertyPresenter>
        </div>
    </div>
    <div class="row">
        <label class="col-lg-2 text-left text-lg-right font-weight-bold">@Localizer[nameof(Resources.Patronimic)]:</label>
        <div class="col-lg-10">
            <LoadingPropertyPresenter Content="@State?.Person?.Patronimic"></LoadingPropertyPresenter>
        </div>
    </div>
    <div class="row">
        <label class="col-lg-2 text-left text-lg-right font-weight-bold">@Localizer[nameof(Resources.Phone)]:</label>
        <div class="col-lg-10">
            <LoadingPropertyPresenter Content="@State?.Person?.Phone"></LoadingPropertyPresenter>
        </div>
    </div>
    <div class="row">
        <label class="col-lg-2 text-left text-lg-right font-weight-bold">e-mail:</label>
        <div class="col-lg-10">
            <LoadingPropertyPresenter Content="@State?.Person?.Email"></LoadingPropertyPresenter>
        </div>
    </div>
    <div class="d-flex flex-lg-row justify-content-end">
        <button class="btn btn-link" @onclick="OnEditToggle">@Localizer[nameof(Resources.Edit)]</button>
    </div>
</div>

@code
{
    [Parameter]
    public Person Person { get; set;}

    [Parameter]
    public bool EnableEditToggle { get; set; } = false;

    [Parameter]
    public EventCallback OnEditToggle { get; set; }
}