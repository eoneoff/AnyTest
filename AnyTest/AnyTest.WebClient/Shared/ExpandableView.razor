@typeparam TItem

@if(IsVisible)
{
    foreach(var item in Items)
    {
        @ElementTemplate(item)
    }
}


@code
{
    [Parameter]
    public IEnumerable<TItem> Items { get; set; }

    [Parameter]
    public bool IsVisible { get; set; } = true;

    [Parameter]
    public RenderFragment<TItem> ElementTemplate { get; set; }
}